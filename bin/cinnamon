#!perl
use strict;
use warnings;
use File::Basename;
use Cwd qw(abs_path);
BEGIN {
    my $file_name = dirname(abs_path(__FILE__)) . q</../config/perl/libs.txt>;
    if (-f $file_name) {
        open my $file, '<', $file_name or die "$0: $file_name: $!";
        unshift @INC, split /:/, <$file>;
    }
}
use Cinnamon;
use Cinnamon::CLI;

my $exit_status = Cinnamon::CLI->new->run(@ARGV);
exit $exit_status;
